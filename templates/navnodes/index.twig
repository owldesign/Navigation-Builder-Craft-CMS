{% extends "_layouts/elementindex" %}
{% set title = "Nav Nodes"|t %}
{% set elementType = 'NavigationBuilder_Navnode' %}

{# {% set tabs = {
	events:    { label: "Events"|t, url: url('events') },
	calendars: { label: "Calendars"|t, url: url('events/calendars') }
} %} #}


{% block sidebar %}
	{% if navigations|length %}
		<div class="buttons">
			{% if navigations|length > 1 %}
				<div class="btn submit menubtn add icon">{{ "New Event"|t }}</div>
				<div class="menu">
					<ul>
						{% for navigation in navigations %}
							<li><a href="{{ url('navigation/'~navigation.handle~'/new') }}">{{ navigation.name|t }}</a></li>
						{% endfor %}
					</ul>
				</div>
			{% else %}
				<a class="btn submit add icon" href="{{ url('navigation/'~navigations[0].handle~'/new') }}">{{ "New Navigation"|t }}</a>
			{% endif %}
		</div>
	{% endif %}

	{{ parent() }}
{% endblock %}